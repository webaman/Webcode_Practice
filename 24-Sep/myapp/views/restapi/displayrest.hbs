<style>
    table {
    counter-reset: tableCount;     
}
.counterCell:before {              
    content: counter(tableCount); 
    counter-increment: tableCount; 
}
</style>

<h1>Display</h1>
{{mydata.length}} Records Found

<table border='1'>
    <tr>
        <th>ID</th>
            <th>User Name</th>
            <th>User Email</th>
            <th>Action</th>
    </tr>

{{#each mydata}}
    <tr>
    <td class="counterCell"></td>
    <td>{{user_name}}</td>
    <td>{{user_email}}</td>
    
    <td>
        <a href="/editcat/{{_id}}">Edit</a> |
        <a href="/deletecat/{{_id}}" onclick="return confirm('Are you sure?')">Delete</a>

    </td>
    </tr>
{{/each}}


</table>