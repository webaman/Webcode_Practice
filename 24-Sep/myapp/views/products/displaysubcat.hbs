<style>
    table {
    counter-reset: tableCount;     
}
.counterCell:before {              
    content: counter(tableCount); 
    counter-increment: tableCount; 
}

</style>

<h1>Display</h1>
{{subcategory_array.length}} Records Found

<table border='1'>
    <tr>
        <th>ID</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Subcategory</th>
        <th>Action</th>
    </tr>

{{#each subcategory_array}}
    <tr>
    <td class="counterCell"></td>
    <td>{{prod_name}}</td>
    <td>{{prod_price}}</td>
    <td>{{_subcategory.sub_category_name}}</td>
    <td>
        <a href="/editsub/{{_id}}">Edit</a> |
        <a href="/deletesub/{{_id}}" onclick="return confirm('Are you sure?')">Delete</a>

    </td>
    </tr>
{{/each}}


</table>